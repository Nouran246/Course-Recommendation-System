<!-- View Member Modal -->
<div
  class="modal fade"
  id="viewMember"
  tabindex="-1"
  aria-labelledby="viewMemberLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="viewMemberLabel">Member Details</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <p><strong>Name:</strong> <span id="view-member-name"></span></p>
        <p>
          <strong>Phone Number:</strong> <span id="view-member-phone"></span>
        </p>
        <p>
          <strong>University ID:</strong>
          <span id="view-member-universityId"></span>
        </p>
        <p>
          <strong>Department:</strong> <span id="view-member-department"></span>
        </p>
        <p><strong>Year:</strong> <span id="view-member-year"></span></p>
        <p><strong>Points:</strong> <span id="view-member-points"></span></p>
        <p>
          <strong>Warnings:</strong> <span id="view-member-warnings"></span>
        </p>
        <p>
          <strong>Board Member:</strong>
          <span id="view-member-boardMember"></span>
        </p>
        <div class="mt-3">
          <strong>QR Code:</strong>
          <div id="view-member-qr"></div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Close
        </button>
        <a href="#" id="view-on-page-btn" class="btn btn-primary">
          View on Separate Page
        </a>
      </div>
    </div>
  </div>
</div>
<%- include ('../icons') %>

<!-- Add this script tag to include the QRCode.js library -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/qrcodejs/1.0.0/qrcode.min.js"></script>
